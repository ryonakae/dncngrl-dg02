+media-query($mq_tablet)
  .content
    &_inner
      padding-left 100px
      padding-right 100px

      .title,
      .description
        max-width 600px
        margin-left auto
        margin-right auto

      .title
        position static

      .description
        margin-top 10px

    &-gallery
      .content_inner
        padding-left 30px

      .title
        position absolute