.content
  position relative
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

  &_inner
    width 100%
    padding-left 170px
    padding-right 200px


  .title
    position absolute
    top 50%
    transform translateY(-50%)
    transition-delay 0
    font-size $fontSize_sectionTitle
    letter-spacing 0.08em
    margin 0
    line-height 1

    span
      transition: all $transitionDuration easing($transitionEasing)
      transition-delay 0
      position relative
      display block
      opacity 0
      filter blur(20px)

    body.is-transitionIn &
      span
        transform translateY(40px)

    body.is-transitionOut &
      span
        transform translateY(-40px)

    .viewArea_section.is-show &
      span
        opacity 1
        filter blur(0px)
        transform translateY(0)


  .description
    transition: all $transitionDuration easing($transitionEasing)
    transition-delay 250ms
    margin-left 300px
    max-width 600px
    opacity 0
    filter blur(20px)

    > p:first-child
      margin-top 0

    > p:last-child
      margin-bottom 0

    body.is-transitionIn &
      transform translateY(40px)

    body.is-transitionOut &
      transform translateY(-40px)

    .viewArea_section.is-show &
      opacity 1
      transform translateY(0)
      filter blur(0px)


  // top
  &-top
    .content_inner
      padding-left 30px

    .subTitle
      transition: all $transitionDuration easing($transitionEasing)
      transition-delay 0
      line-height 1
      margin 0
      font-size rem(28px)
      opacity 0
      filter blur(20px)

      body.is-transitionIn &
        transform translateY(40px)

      body.is-transitionOut &
        transform translateY(-40px)

      .viewArea_section.is-show &
        opacity 1
        transform translateY(0)
        filter blur(0px)

    .title
      position relative
      transform translateY(0)
      font-size rem(90px)
      letter-spacing -0.01em
      margin-top 12px

      span
        transition-delay 250ms

    .caption
      transition: all $transitionDuration easing($transitionEasing)
      transition-delay 500ms
      display block
      line-height 1
      margin 0
      font-size rem(16px)
      margin-top 10px
      opacity 0
      filter blur(20px)

      body.is-transitionIn &
        transform translateY(40px)

      body.is-transitionOut &
        transform translateY(-40px)

      .viewArea_section.is-show &
        opacity 1
        transform translateY(0)
        filter blur(0px)


