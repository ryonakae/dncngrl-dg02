.bg
  position fixed
  -webkit-backface-visibility:hidden;
  backface-visibility:hidden;
  width 100%
  height 100%
  top 0
  left 0
  pointer-events none

  &_item
    transition: all 1000ms ease
    position fixed
    -webkit-backface-visibility:hidden;
    backface-visibility:hidden;
    width 100%
    height 100%
    top 0
    left 0
    opacity 0
    background-color transparent;

    // おまじない
    canvas
      -webkit-backface-visibility:hidden;
      backface-visibility:hidden;
      visibility hidden

    &-intro
      background-color rgba(#000, 0.1);

      canvas
        opacity 0.5

    &.is-show
      opacity 1

      canvas
        visibility visible