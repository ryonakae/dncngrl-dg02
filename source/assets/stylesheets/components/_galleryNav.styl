.galleryNav
  transition: all $transitionDuration easing($transitionEasing)
  transition-delay 500ms
  position absolute
  bottom 90px
  left 50%
  transform translateX(-50%)
  opacity 0

  // disable when transition
  &.is-disableClick
    .galleryNav_arrow
      pointer-events none
      opacity 0.2

  .viewArea_section.is-show &
    opacity 1

  &_indicator
    font-size $fontSize_small

    > *
      display inline-block
      vertical-align middle

    .separator
      width 1px
      height 30px
      background-color $textColor_default
      margin 0 15px

  &_arrow
    transition: all 600ms ease
    width 30px
    height 31px
    position absolute
    margin-top -2px
    cursor pointer

    // disable when transition
    &.is-disableClick
      pointer-events none
      opacity 0.2

    .inner
      transition: all $transitionDuration_quick easing('out-expo')
      transition-property opacity, transform
      width 100%
      height 100%
      position relative

    .borderCenter
      transition: all $transitionDuration_quick easing('out-expo')
      position absolute
      width 30px
      height 1px
      top 50%
      background-color $textColor_default

    .borderLeft,
    .borderRight
      position absolute
      width 8px
      height 1px
      background-color $textColor_default
      top 50%

    &-prev
      right 50%
      margin-right 70px

      .borderCenter
        left 0

      .borderLeft
        left 0
        transform-origin left top
        transform rotate(45deg)

      .borderRight
        left 0
        transform-origin left bottom
        transform rotate(-45deg)

      // hover animation
      body.is-pc &
        &:hover
          .inner
            opacity 0.7
            transform translateX(-5px)

          .borderCenter
            width 26px

    &-next
      left 50%
      margin-left 70px

      .borderCenter
        right 0

      .borderLeft
        right 0
        transform-origin right top
        transform rotate(-45deg)

      .borderRight
        right 0
        transform-origin right bottom
        transform rotate(45deg)

      // hover animation
      body.is-pc &
        &:hover
          .inner
            opacity 0.7
            transform translateX(5px)

          .borderCenter
            width 26px


+media-query($mq_spLarge)
  .galleryNav
    bottom 75px

    &_arrow
      &-prev
        margin-right 50px

      &-next
        margin-left 50px